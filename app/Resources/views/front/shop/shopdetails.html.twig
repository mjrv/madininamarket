{% extends 'front.html.twig' %}
{% block body %}
    {% set id = 0 %} <!--  on defini un variable appelé id a 0 -->
	{% for pic in products %}
		{% set item = pic.items %}
		
		{% if id < item.id %}
			<!-- On arrive ici que si l'item n'est pas encore affiché -->
			<div class="col-sm-4">
				<a href="{{path('show_product_details',{'slug': item.slug})}}">
					<img src="{{pic.url}}" alt="" class="img-thumbnail" style="width:197px !important"> <br>
				</a>
					{{item.priceHt|tva(item.tva.value)}} € <br>
					<a href="{{path('addToCart', {'id' : item.id})}}" class="btn btn-primary">Ajout au pannier</a>
			</div>
		{% endif %}

		{% set id = item.id %}  <!-- on assigne id a l'id de l'item bouclé-->
	{% endfor %}





