								{% set Ht = item.priceHt * item.stock %}
							{% else %} 
								{% set Ht = item.priceHt * cart[item.id] %}
							{% endif %}

							{% set TotalHt = TotalHt + Ht %}

							{% set Ttc = Ht|tva(item.tva.value) %}

							{% set TotalTva = TotalTva + (Ttc - Ht) %}

							{% set Total = Total + Ttc %}

							<tr>
