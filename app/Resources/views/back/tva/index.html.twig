{% extends 'back.html.twig' %}

{% block body %}
    <h1>Tvas list</h1>

    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tva in tvas %}
            <tr>
                <td><a href="{{ path('admin_tva_show', { 'id': tva.id }) }}">{{ tva.id }}</a></td>
                <td>{{ tva.value }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_tva_show', { 'id': tva.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_tva_edit', { 'id': tva.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_tva_new') }}">Create a new tva</a>
        </li>
    </ul>
{% endblock %}
